{
  "watch": ["src"],
  "ext": "ts,json",
  "ignore": [
    "src/**/*.spec.ts",
    "src/**/*.test.ts",
    "dist",
    "node_modules",
    "logs",
    "uploads"
  ],
  "exec": "ts-node --transpile-only src/index.ts",
  "env": {
    "NODE_ENV": "development"
  },
  "delay": 1000,
  "verbose": true,
  "restartable": "rs",
  "colours": true,
  "runOnChangeOnly": false,
  "legacyWatch": false,
  "pollingInterval": 100,
  "events": {
    "start": "echo 'ðŸš€ PujiGori Backend starting...'",
    "restart": "echo 'ðŸ”„ PujiGori Backend restarting...'",
    "crash": "echo 'ðŸ’¥ PujiGori Backend crashed!'",
    "exit": "echo 'ðŸ‘‹ PujiGori Backend stopped'"
  }
}